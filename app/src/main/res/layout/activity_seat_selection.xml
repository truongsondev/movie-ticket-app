<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SeatSelectionActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="#0066CC" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Booking Steps -->
    <LinearLayout
        android:id="@+id/bookingSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/stepSelectMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chọn phim / Rạp / Suất"
            android:textColor="#78909C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stepSelectSeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chọn ghế"
            android:textColor="#0066CC"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stepSelectFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chọn thức ăn"
            android:textColor="#78909C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stepPayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thanh toán"
            android:textColor="#78909C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stepConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Xác nhận"
            android:textColor="#78909C"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/bookingSteps">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0066CC" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0066CC" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E0E0E0" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E0E0E0" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E0E0E0" />
    </LinearLayout>

    <!-- Movie Info -->
    <LinearLayout
        android:id="@+id/movieInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFF9E6"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator">

        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_poster"
            android:contentDescription="Movie Poster" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thám Tử Kiền: Kỳ Án Không Đầu"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/movieFormat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2D Phụ Đề - "
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/movieRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T16"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/room_badge_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/theaterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Galaxy Nguyễn Du - RAP 5"
                android:textColor="#212121"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/showtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suất: 18:15 - Thứ Ba, 13/05/2025"
                android:textColor="#212121"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Showtime Selector -->
    <LinearLayout
        android:id="@+id/showtimeSelectorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/movieInfoContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi suất chiếu"
            android:textColor="#212121"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/showtimeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="150dp"
            android:background="@drawable/spinner_background"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Screen Indicator -->
    <TextView
        android:id="@+id/screenIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MÀN HÌNH"
        android:textColor="#757575"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/showtimeSelectorContainer" />

    <View
        android:id="@+id/screenLine"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="#757575"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/screenIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Seat Map -->
    <ScrollView
        android:id="@+id/seatMapScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/screenLine"
        app:layout_constraintBottom_toTopOf="@id/seatLegend">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <!-- Row I -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="I"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />

                    <include layout="@layout/seat_row" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="I"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Row H -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="H"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />

                    <include layout="@layout/seat_row" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="H"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Row G -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="G"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />

                    <include layout="@layout/seat_row" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="G"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Add more rows as needed -->
                <!-- Row F -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />

                    <include layout="@layout/seat_row" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Row E -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />

                    <include layout="@layout/seat_row" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:gravity="center"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <!-- Seat Legend -->
    <LinearLayout
        android:id="@+id/seatLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/seat_available" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trống"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/seat_selected" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang chọn"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/seat_unavailable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng:"
                android:textSize="14sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF7F00" />
        </LinearLayout>

        <Button
            android:id="@+id/btnBack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:textColor="#757575"
            android:background="@drawable/button_outline_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp tục"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary_background" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
