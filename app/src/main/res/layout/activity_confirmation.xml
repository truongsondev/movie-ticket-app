<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".activity.ConfirmationActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4CAF50"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đặt vé thành công"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Booking Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Booking ID and Date -->
                    <TextView
                        android:id="@+id/tvBookingId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã đặt vé: GXY123456"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBookingDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày đặt: 13/05/2025 16:36"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <!-- Movie Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- Movie Poster -->
                        <ImageView
                            android:id="@+id/ivMoviePoster"
                            android:layout_width="80dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_poster"
                            android:contentDescription="Movie Poster" />

                        <!-- Movie Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tvMovieTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thám Tử Kiền: Kỳ Án Không Đầu"
                                android:textColor="#212121"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:id="@+id/tvMovieFormat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2D Phụ Đề - "
                                    android:textColor="#757575"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="T16"
                                    android:textColor="#FFFFFF"
                                    android:background="@drawable/room_badge_background"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="2dp"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvTheaterName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Galaxy Nguyễn Du - RAP 5"
                                android:textColor="#212121"
                                android:textSize="14sp"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/tvShowtime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Suất: 18:15 - Thứ Ba, 13/05/2025"
                                android:textColor="#212121"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Ticket Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTicketSummary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1x Người Lớn - Member"
                                android:textColor="#212121"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvSeatInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ghế: A9"
                                android:textColor="#212121"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55.000 đ"
                            android:textColor="#FF7F00"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- QR Code Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã QR vé của bạn"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <ImageView
                        android:id="@+id/ivQrCode"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/qr_placeholder"
                        android:contentDescription="QR Code" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vui lòng xuất trình mã QR này tại rạp để nhận vé"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Instructions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lưu ý"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Vui lòng đến rạp trước giờ chiếu ít nhất 15 phút"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Xuất trình mã QR tại quầy vé hoặc quét tại máy tự động"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Không được hoàn tiền sau khi đã thanh toán"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Liên hệ hotline 1900 6017 nếu cần hỗ trợ"
                        android:textColor="#757575"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Về trang chủ"
            android:textColor="#757575"
            android:background="@drawable/button_outline_background"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSaveTicket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu vé"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary_background" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
