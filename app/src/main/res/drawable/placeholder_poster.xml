<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Film icon -->
    <item android:gravity="center" android:width="48dp" android:height="48dp">
        <vector
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:fillColor="#AAAAAA"
                android:pathData="M18,4l2,4h-3l-2,-4h-2l2,4h-3l-2,-4H8l2,4H7L5,4H4c-1.1,0 -1.99,0.9 -1.99,2L2,18c0,1.1 0.9,2 2,2h16c1.1,0 2,-0.9 2,-2V4h-4z"/>
        </vector>
    </item>

    <!-- Text -->
    <item android:gravity="bottom|center_horizontal" android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
        <bitmap
            android:src="@android:color/transparent"
            android:gravity="bottom|center_horizontal" />
    </item>
</layer-list>
